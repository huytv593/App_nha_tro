<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/tab_bg">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left">

            <ImageView
                android:id="@+id/imvBack"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/pre" />

            <TextView
                android:id="@+id/txtBack"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Đăng tin nhà trọ"
                android:textColor="#ffffffff"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">

            <ImageView
                android:id="@+id/imvPost"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_marginTop="10dp"
                android:background="@drawable/upload" />

            <TextView
                android:id="@+id/txtPost"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Đăng tin"
                android:textColor="#ffffffff"
                android:textStyle="bold" />
        </TableRow>
    </TableRow>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"


                android:layout_height="1dp"
                android:background="#00796B" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/camera"
                    android:scaleType="fitXY" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/camera"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:background="@color/tab_bg"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"

                android:text="Thông tin cơ bản"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffffff" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="209dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Tỉnh/Thành phố"

                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <Spinner
                        android:id="@+id/spinner2"

                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Quận/Huyện"

                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <Spinner
                        android:id="@+id/spQuanhuyen"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Phường/Xã"

                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <Spinner
                        android:id="@+id/spPhuongxa"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Đường/Phố"

                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <Spinner
                        android:id="@+id/spDuongpho"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Diện tích"

                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/edtDientich"

                        android:layout_width="200dp"

                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Giá cho thuê"

                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/edtGia"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Ngày hết hạn"

                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
                        android:id="@+id/edtNgayhh"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txt3"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/tab_bg"
                android:gravity="center_vertical"

                android:paddingLeft="5dp"
                android:text="Thông tin liên hệ"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffffff" />

            <EditText
                android:id="@+id/edtSdt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="1dp"
                android:alpha="0.8"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:hint="0988888888"
                android:inputType="phone"
                android:paddingLeft="5dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:alpha="0.8"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:hint="email@gmail.com"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:background="@color/tab_bg"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"

                android:text="Mô tả chi tiết"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffffff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#00796B" />

            <EditText
                android:id="@+id/edtMota"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.8"
                android:background="#FFFFFF"
                android:gravity="top|left"
                android:hint="Có nóng lạnh tiện nghi đầy đủ,...."
                android:paddingLeft="5dp"
                android:textStyle="italic" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>