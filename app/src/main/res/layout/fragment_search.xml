<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/fragment_bg">

    <Spinner
        android:layout_width="250dp"
        android:background="@color/spinner_bg"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:id="@+id/thanhpho_spinner" />

    <Spinner
        android:layout_width="250dp"
        android:gravity="center"
        android:background="@color/spinner_bg"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:id="@+id/huyen_spinner" />

    <Spinner
        android:layout_width="250dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:background="@color/spinner_bg"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:id="@+id/phuongxa_spinner" />

    <Spinner
        android:layout_width="250dp"
        android:gravity="center"
        android:background="@color/spinner_bg"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:id="@+id/duongpho_spinner" />

    <Spinner
        android:layout_width="250dp"
        android:gravity="center"
        android:background="@color/spinner_bg"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:id="@+id/dientich_spinner" />

    <Spinner
        android:layout_width="250dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:background="@color/spinner_bg"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:id="@+id/gia_spinner" />

    <Button
        android:layout_width="250dp"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:background="@color/spinner_bg"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:text="Tìm kiếm"
        android:id="@+id/btnSearch" />

</LinearLayout>